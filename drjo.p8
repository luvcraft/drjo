function _init()
	boulder.x = 5*8
	boulder.y = 8
end

function _update()
	hero:update()
	
	local herox = roundtonearest(hero.x,8)/8
	local heroy = roundtonearest(hero.y,8)/8
	mset(herox,heroy,0)
	
	boulder:update()
end

function _draw()
	pal(5,0)
	map(16)
	pal()
	map()
	hero:draw()
	boulder:draw()
	cursor(0,0)
	print("x = "..hero.x.." y = "..hero.y)
end

